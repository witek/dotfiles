alias ls='ls --color=auto'
alias mkdir='mkdir -pv'
alias grep='grep --colour=auto'
alias egrep='egrep --colour=auto'
alias fgrep='fgrep --colour=auto'

alias l="ls -l -tr --all --human-readable --color=auto"

alias ...="cd ../.."
alias ....="cd ../../.."

alias vi="nvim"
alias vim="nvim"

alias rscp="rsync --verbose --checksum --recursive --links --perms --executability --owner --group --times --compress --stats --progress --human-readable"

alias llm="uvx llm"